{
  "secret": {
      "rabbit":{
          "url": "amqp://myuser:mypassword@localhost:5672",
          "exchange": "worker",
          "queue": "mail"
      },
      "garbage":{
          "url": "localhost:19092",
          "clientId": "mail-worker"
      },
      "mail":{
          "user": "username",
          "pass": "pass"
      }
  },
  "async": {
      "fileroute": "/../../mft.yaml"
  },
  "mail": {
    "sender": "server@mathieufont.com",
    "transport":{
        "host": "127.0.0.1",
        "port": 1025,
        "auth":{},
        "secure": false,
        "tls":{
            "rejectUnauthorized": false
        }
    },
    "templates": "./templates"
  },
  "templates":{
      "mail":{
          "RESET_PASSWORD":{
              "subject": "Your new password is here",
              "txt": "simple_reset_password.txt"
          },
          "ADMIN_ERROR_MAIL":{
              "subject": "An error occured in the system",
              "txt": "error_alert.txt"
          },
          "ADMIN_FAILURE_MAIL":{
              "subject": "An failure occured in the system",
              "txt": "failure_alert.txt"
          },
          "ADMIN_WARNING_MAIL":{
              "subject": "Warning from the system",
              "txt": "warning_alert.txt"
          }
      }
  }
}
