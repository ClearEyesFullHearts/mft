{
    "secret": {
        "auth": "supersecret",
        "mongo":{
            "url": "mongodb://127.0.0.1:27017/mft-dev"
        },
        "rabbit":{
            "url": "amqp://myuser:mypassword@127.0.0.1:5672"
        },
        "garbage":{
            "url": "localhost:19092",
            "clientId": "rest-api"
        },
        "mail":{
            "user": "username",
            "pass": "pass"
        }
    },
    "public":{
        "name": "mft",
        "url": "http://localhost:8080",
        "cors":{
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET,PUT,POST,DELETE,OPTIONS",
            "Access-Control-Allow-Headers": "Content-Type, Authorization, Content-Length"
        }
    },
    "base": {
        "instance": {
            "port": 3000
        },
        "security": "x-mft-roles",
        "roles": [
            "ROLE_USER",
            "ROLE_ADMIN"
        ],
        "hashSaltRound": 2,
        "mail": {
            "sender": "server@mathieufont.com",
            "transport":{
                "host": "127.0.0.1",
                "port": 1025,
                "auth":{},
                "secure": false,
                "tls":{
                    "rejectUnauthorized": false
                }
            },
            "templates": "./templates/mail"
        }
    },
    "api": [{
            "name": "health",
            "swagger": "swagger-health-1.0.0.json",
            "controller": ""
        },
        {
            "name": "user",
            "swagger": "swagger-user-1.0.0.json",
            "controller": ""
        },
        {
            "name": "invoice",
            "swagger": "swagger-invoice-1.0.0.json",
            "controller": ""
        }
    ],
    "async": {
        "fileroute": "/../../async/mft.yaml"
    },
    "templates":{
        "mail":{
            "RESET_PASSWORD":{
                "subject": "Your new password is here",
                "txt": "simple_reset_password.txt"
            }
        }
    }
}
