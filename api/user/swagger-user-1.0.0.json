{
  "swagger": "2.0",
  "info": {
    "title": "user login and management",
    "version": "1.0.0"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user": {
      "post": {
        "x-swagger-router-controller": "connection",
        "operationId": "createUser",
        "summary": "Register a new user",
        "description": "Registering a new user to be able to connect to the application.",
        "produces": [
          "application/json"
        ],
        "parameters": [{
          "in": "body",
          "name": "body",
          "description": "Created user object",
          "required": true,
          "schema": {
            "$ref": "#/definitions/NewUser"
          }
        }],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          }
        }
      }
    },
    "/user/login": {
      "get": {
        "x-swagger-router-controller": "connection",
        "operationId": "loginUser",
        "summary": "Logs user into the system",
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [{
            "in": "body",
            "name": "body",
            "description": "Logging informations",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LogInfo"
            }
          }

        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    },
    "/user/logout": {
      "put": {
        "x-swagger-router-controller": "connection",
        "operationId": "logoutUser",
        "x-mft-roles": [
          "ROLE_USER",
          "ROLE_ADMIN"
        ],
        "summary": "Logs out current logged in user session",
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        }
      }
    }
  },
  "definitions": {
    "NewUser": {
      "type": "object",
      "required": [
        "username",
        "email",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Auth": {
      "type": "object",
      "properties": {
        "auth": {
          "type": "boolean"
        },
        "token": {
          "type": "string"
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      }
    },
    "LogInfo": {
      "type": "object",
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "description": "The email for login",
          "type": "string"
        },
        "password": {
          "description": "The password for login in clear text",
          "type": "string"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": [
            "ROLE_USER",
            "ROLE_ADMIN"
          ]
        }
      }
    }
  }
}